<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#565555">

    <!-- Título de la página -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Calculadora"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/result_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_margin="30dp"
        android:gravity="end"
        android:inputType="none"
        android:textSize="32sp"
        android:textColor="#FFFFFF" /> <!-- Texto blanco en el EditText -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_display"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="265dp"
        android:columnCount="4"
        android:rowCount="6">

        <!-- Buttons for digits and operations -->
        <Button
            android:id="@+id/button_1"
            android:text="1"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_2"
            android:text="2"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_3"
            android:text="3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_equals"
            android:backgroundTint="#404040"
            android:text="="
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_4"
            android:text="4"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_5"
            android:text="5"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_6"
            android:text="6"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_add"
            android:backgroundTint="#4D4C4C"
            android:text="+"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_7"
            android:text="7"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_8"
            android:text="8"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_9"
            android:text="9"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_subtract"
            android:backgroundTint="#4D4C4C"
            android:text="-"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/vacio1"
            android:text=""
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_0"
            android:text="0"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/vacio2"
            android:text=""
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_multiply"
            android:backgroundTint="#4D4C4C"
            android:text="*"
            android:textColor="#FFFFFF" />

        <!-- Trigonometric functions -->
        <Button
            android:id="@+id/button_sin"
            android:text="sin"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_cos"
            android:text="cos"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_tan"
            android:text="tan"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_divide"
            android:backgroundTint="#4D4C4C"
            android:text="/"
            android:textColor="#FFFFFF" />

        <!-- Clear and Backspace Buttons -->
        <Button
            android:id="@+id/button_backspace"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:text="C"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/vacio3"
            android:text=""
            android:visibility="invisible" />

        <Button
            android:id="@+id/vacio4"
            android:text=""
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:text="CE"
            android:textColor="#FFFFFF" />

    </GridLayout>
</RelativeLayout>
